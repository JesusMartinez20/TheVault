<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="5dp"
        app:cardBackgroundColor="@color/primario_claro"
        app:cardCornerRadius="10dp"
        app:contentPadding="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TableLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="98">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/textView10"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="13"
                        android:gravity="center"
                        android:text="@string/Perfil_idBoleto"
                        android:textColor="@color/secundario_texto"
                        android:textSize="13sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="20"
                        android:gravity="center"
                        android:text="@string/Perfil_peliculaBoleto"
                        android:textColor="@color/secundario_texto"
                        android:textSize="13sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="30"
                        android:gravity="center"
                        android:text="@string/Perfil_FuncionBoleto"
                        android:textColor="@color/secundario_texto"
                        android:textSize="13sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/textView8"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="17"
                        android:gravity="center"
                        android:text="@string/Perfil_AsientosBoleto"
                        android:textColor="@color/secundario_texto"
                        android:textSize="13sp"
                        android:textStyle="bold" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/txtIdBoleto"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="13"
                        android:gravity="center"
                        android:textColor="@color/secundario_texto"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/txtNombrePelicula"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="20"
                        android:gravity="center"
                        android:textColor="@color/secundario_texto"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/txtFuncionBoleto"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="30"
                        android:gravity="center"
                        android:textColor="@color/secundario_texto"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/txtAsientosBoleto"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="17"
                        android:gravity="center"
                        android:textColor="@color/secundario_texto"
                        android:textSize="13sp" />
                </TableRow>

            </TableLayout>

            <ImageButton
                android:id="@+id/btnVerBoleto"
                android:layout_width="32dp"
                android:layout_height="27dp"
                android:layout_gravity="center_vertical"
                android:layout_margin="2dp"
                android:layout_weight="2"
                android:background="@drawable/circle_button"
                android:src="@drawable/eye"
                android:textAllCaps="false"
                android:textColor="@color/primario_texto"
                android:textSize="10dp"
                android:visibility="visible" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>